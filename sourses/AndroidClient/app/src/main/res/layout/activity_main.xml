<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/ferma">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/btnActTwo"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="110sp"
        android:layout_height="50sp"
        android:text="@string/button2"
        android:id="@+id/btnResult"
        android:background="@color/connect_back"
        android:layout_below="@+id/btnActTwo"
        android:layout_marginTop="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110sp"
        android:layout_height="50sp"
        android:text="@string/game"
        android:id="@+id/btnActTwo"
        android:layout_gravity="center"
        android:background="@color/Glass_green"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <EditText
        android:layout_width="170sp"
        android:layout_height="40sp"
        android:id="@+id/editText1"
        android:hint="@string/email"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:ems="10"/>

    <EditText
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:id="@+id/editText2"
        android:hint="@string/password"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_toRightOf="@+id/editText1"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:inputType="number"/>

    <Button
        android:layout_width="110sp"
        android:layout_height="50sp"
        android:text="@string/connect"
        android:id="@+id/button"
        android:background="@color/connect_back"
        android:layout_below="@+id/editText1"
        android:layout_toLeftOf="@+id/textView1"
        android:layout_toStartOf="@+id/textView1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/token_check"
        android:id="@+id/button2"
        android:layout_above="@+id/btnActTwo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>